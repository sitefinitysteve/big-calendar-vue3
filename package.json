{
  "name": "big-calendar-vue3",
  "version": "0.1.0",
  "type": "module",
  "description": "A fully-featured calendar component for Vue 3 with 5 views, event CRUD, user filtering, and dark mode. Built with shadcn-vue and Tailwind CSS.",
  "author": "Steve McNiven-Scott <steve@sitefinitysteve.com> (https://www.sitefinitysteve.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicksitefinitysteve/big-calendar-vue3"
  },
  "keywords": [
    "vue",
    "vue3",
    "calendar",
    "big-calendar",
    "shadcn-vue",
    "tailwindcss",
    "date-fns",
    "pinia"
  ],
  "exports": {
    ".": {
      "import": "./dist/big-calendar-vue3.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "main": "./dist/big-calendar-vue3.js",
  "module": "./dist/big-calendar-vue3.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:lib": "vue-tsc --noEmit && vite build --config vite.config.lib.ts",
    "preview": "vite preview",
    "typecheck": "vue-tsc -b",
    "prepublishOnly": "npm run build:lib",
    "prepare": "husky",
    "pack": "npm run build:lib && npm pack"
  },
  "dependencies": {
    "tw-animate-css": "^1.4.0"
  },
  "peerDependencies": {
    "@internationalized/date": "^3.0.0",
    "@vee-validate/zod": "^4.0.0",
    "@vueuse/core": "^14.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "lucide-vue-next": ">=0.400.0",
    "pinia": "^3.0.0",
    "reka-ui": "^2.0.0",
    "tailwind-merge": "^3.0.0",
    "vee-validate": "^4.0.0",
    "vue": "^3.5.0",
    "vue-router": "^4.0.0",
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue-router": {
      "optional": true
    },
    "vee-validate": {
      "optional": true
    },
    "@vee-validate/zod": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.2.3",
    "@vee-validate/zod": "^4.15.1",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vueuse/core": "^14.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lucide-vue-next": "^0.564.0",
    "pinia": "^3.0.4",
    "reka-ui": "^2.8.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vee-validate": "^4.15.1",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.28",
    "vue-router": "^4.6.4",
    "vue-tsc": "^3.2.4",
    "zod": "^3.25.76"
  }
}
